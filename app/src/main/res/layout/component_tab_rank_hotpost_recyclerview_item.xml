<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_tab_rank_hotpost_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <ImageView
        android:id="@+id/imageView_heart_tab_rank_hotpost_item"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_tab_rank_hotpost_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tab_rank_hotpost_item"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/textView_count_tab_rank_hotpost_item"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart_tab_rank_hotpost_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView_tab_rank_hotpost_item" />
</android.support.constraint.ConstraintLayout>