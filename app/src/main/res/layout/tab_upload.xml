<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <io.untaek.animal.component.SelectPictureComponent
        android:id="@+id/select_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:target="image"
        app:text="Image"
        app:icon="@drawable/ic_image_black_24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <io.untaek.animal.component.SelectPictureComponent
        android:id="@+id/selectPictureComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:icon="@drawable/ic_video_library_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/select_picture"
        app:target="video"
        app:text="Video" />

    <io.untaek.animal.component.SelectPictureComponent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:icon="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/selectPictureComponent"
        app:target="camera"
        app:text="Capture" />

</android.support.constraint.ConstraintLayout>